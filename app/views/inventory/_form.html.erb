<%= form_with model: inventory do |form| %>
  <div>
    <%= form.label :description %><br>
    <%= form.text_field :description, value: @inventory.description %>
  </div>

  <div>
    <%= form.label :quantity %><br>
    <%= form.text_area :quantity, value: @inventory.quantity %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.text_area :price, value: @inventory.price %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>